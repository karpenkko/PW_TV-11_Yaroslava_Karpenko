<resources>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#32412C</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColor">#000000</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/HintStyle</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HintStyle">
        <item name="android:textColor">@color/hint_color</item>
    </style>
</resources>


